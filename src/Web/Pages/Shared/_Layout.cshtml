<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Marketplace</title>
    <meta name="description" content="@ViewData["Description"]" />
    <meta name="keywords" content="@ViewData["Keywords"]" />
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Top Bar -->
    <div class="top-bar bg-dark text-white py-2">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <small><i class="fas fa-phone me-2"></i>+90 (212) 123 45 67</small>
                    <small class="ms-3"><i class="fas fa-envelope me-2"></i>info@marketplace.com</small>
                </div>
                <div class="col-md-6 text-end">
                    <small><i class="fas fa-users me-2"></i>50K+ Satıcı, 10M+ Müşteri</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Header -->
    <header class="header sticky-top bg-white shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand fw-bold fs-3 text-primary" asp-area="" asp-page="/Index">
                    <i class="fas fa-store me-2"></i>Marketplace
                </a>

                <!-- Search Bar -->
                <div class="search-container flex-grow-1 mx-4">
                    <form class="d-flex" role="search">
                        <div class="input-group">
                            <input class="form-control border-end-0" type="search" placeholder="Mağaza, kategori veya ürün ara..." aria-label="Search">
                            <button class="btn btn-outline-primary border-start-0" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Navigation -->
                <div class="navbar-nav ms-auto align-items-center">
                    <!-- User Menu -->
                    <div class="nav-item dropdown me-3">
                        <a class="nav-link text-dark" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle fs-5"></i>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profilim</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-store me-2"></i>Mağazam</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-chart-line me-2"></i>Satış Raporları</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt me-2"></i>Çıkış</a></li>
                        </ul>
                    </div>

                    <!-- Store Application Button -->
                    <a class="btn btn-primary me-3" href="/magaza-basvurusu">
                        <i class="fas fa-store me-2"></i>Mağaza Aç
                    </a>
                </div>

                <!-- Mobile Menu Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>

        <!-- Main Navigation -->
        <div class="main-nav bg-primary">
            <div class="container">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">
                                <i class="fas fa-home me-1"></i>Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-th-large me-1"></i>Kategoriler
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-tshirt me-2"></i>Giyim & Moda</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-mobile-alt me-2"></i>Elektronik</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-home me-2"></i>Ev & Yaşam</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-spa me-2"></i>Kozmetik</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-baby me-2"></i>Bebek & Çocuk</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-dumbbell me-2"></i>Spor & Outdoor</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">
                                <i class="fas fa-store me-1"></i>Mağazalar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">
                                <i class="fas fa-chart-line me-1"></i>Satıcı Ol
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">
                                <i class="fas fa-headset me-1"></i>Destek
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer bg-dark text-white py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-primary mb-3">Marketplace</h5>
                    <p class="text-light mb-3">Türkiye'nin en büyük marketplace platformu. Kendi mağazanızı açın, ürünlerinizi satın, gelirinizi artırın.</p>
                    <div class="platform-stats mb-3">
                        <div class="row text-center">
                            <div class="col-4">
                                <div class="stat-item">
                                    <h4 class="text-primary mb-0 fw-bold">50K+</h4>
                                    <small class="text-light">Satıcı</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="stat-item">
                                    <h4 class="text-primary mb-0 fw-bold">2M+</h4>
                                    <small class="text-light">Ürün</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="stat-item">
                                    <h4 class="text-primary mb-0 fw-bold">10M+</h4>
                                    <small class="text-light">Müşteri</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="social-links">
                        <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h6 class="text-white mb-3">Satıcı Hizmetleri</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-light text-decoration-none footer-link">Mağaza Aç</a></li>
                        <li><a href="#" class="text-light text-decoration-none footer-link">Satıcı Rehberi</a></li>
                        <li><a href="#" class="text-light text-decoration-none footer-link">Komisyon Oranları</a></li>
                        <li><a href="#" class="text-light text-decoration-none footer-link">Satıcı Destek</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h6 class="text-white mb-3">Kurumsal</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-light text-decoration-none footer-link">Hakkımızda</a></li>
                        <li><a href="#" class="text-light text-decoration-none footer-link">Kariyer</a></li>
                        <li><a href="#" class="text-light text-decoration-none footer-link">İletişim</a></li>
                        <li><a href="#" class="text-light text-decoration-none footer-link">Gizlilik Politikası</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h6 class="text-white mb-3">Ödeme Yöntemleri</h6>
                    <div class="payment-methods mb-3">
                        <i class="fab fa-cc-visa fs-3 text-primary me-2"></i>
                        <i class="fab fa-cc-mastercard fs-3 text-primary me-2"></i>
                        <i class="fab fa-cc-paypal fs-3 text-primary me-2"></i>
                    </div>
                    <h6 class="text-white mb-3">Kargo Firmaları</h6>
                    <div class="shipping-companies">
                        <i class="fas fa-truck text-primary me-2"></i>
                        <i class="fas fa-shipping-fast text-primary me-2"></i>
                        <i class="fas fa-plane text-primary me-2"></i>
                    </div>
                </div>
            </div>
            <hr class="my-4 border-secondary">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="text-light mb-0">&copy; 2025 Marketplace. Tüm hakları saklıdır.</p>
                </div>
                <div class="col-md-6 text-end">
                    <div class="country-selector d-inline-flex align-items-center">
                        <img src="https://cdn.jsdelivr.net/npm/@@flag-icons/flags@7.0.0/flags/4x3/tr.svg" alt="Türkiye" width="30" class="me-2 rounded">
                        <span class="text-light">Türkiye</span>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
