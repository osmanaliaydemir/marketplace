<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Marketplace</title>
    <meta name="description" content="@ViewData["Description"]" />
    <meta name="keywords" content="@ViewData["Keywords"]" />
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Top Bar -->
    <div class="top-bar bg-dark text-white py-2">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <small><i class="fas fa-phone me-2"></i>+90 (212) 123 45 67</small>
                    <small class="ms-3"><i class="fas fa-envelope me-2"></i>info@marketplace.com</small>
                </div>
                <div class="col-md-6 text-end">
                    <small><i class="fas fa-users me-2"></i>50K+ Satıcı, 10M+ Müşteri</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Header -->
    <header class="header sticky-top bg-white shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand fw-bold fs-3 text-primary" asp-area="" asp-page="/Index">
                    <i class="fas fa-store me-2"></i>Marketplace
                </a>

                <!-- Search Bar -->
                <div class="search-container flex-grow-1 mx-4">
                    <form class="d-flex" role="search">
                        <div class="input-group">
                            <input class="form-control border-end-0" type="search" placeholder="Mağaza, kategori veya ürün ara..." aria-label="Search">
                            <button class="btn btn-outline-primary border-start-0" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Navigation -->
                <div class="navbar-nav ms-auto align-items-center">
                    @if (User?.Identity?.IsAuthenticated != true)
                    {
                        <a class="btn btn-outline-primary me-2" href="/giris">
                            <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                        </a>
                        <a class="btn btn-primary me-2" href="/uye-ol">
                            <i class="fas fa-user-plus me-2"></i>Üye Ol
                        </a>
                        <a class="btn btn-primary me-3" href="/magaza-basvurusu">
                            <i class="fas fa-store me-2"></i>Mağaza Başvurusu
                        </a>
                    }
                    else if (User.IsInRole("Seller"))
                    {
                        <a class="btn btn-outline-secondary me-2" href="/satici/panel">
                            <i class="fas fa-gauge me-2"></i>Satıcı Paneli
                        </a>
                        <form method="post" action="/cikis" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger"><i class="fas fa-sign-out-alt me-2"></i>Çıkış</button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-outline-secondary me-2" href="/hesabim">
                            <i class="fas fa-user me-2"></i>Hesabım
                        </a>
                        <a class="btn btn-outline-secondary me-2" href="/siparislerim">
                            <i class="fas fa-box me-2"></i>Siparişlerim
                        </a>
                        <form method="post" action="/cikis" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger"><i class="fas fa-sign-out-alt me-2"></i>Çıkış</button>
                        </form>

                    }
                </div>

                <!-- Mobile Menu Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>

        <!-- Main Navigation -->
        <div class="main-nav bg-primary">
            <div class="container">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">
                                <i class="fas fa-home me-1"></i>Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-th-large me-1"></i>Kategoriler
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Elektronik</a></li>
                                <li><a class="dropdown-item" href="#">Moda</a></li>
                                <li><a class="dropdown-item" href="#">Ev & Yaşam</a></li>
                                <li><a class="dropdown-item" href="#">Spor</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">© @DateTime.Now.Year Marketplace</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
