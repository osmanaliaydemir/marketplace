        }
        
        .ripple {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.6);
            transform: scale(0);
            animation: ripple 0.6s linear;
            pointer-events: none;
        }
        
        @@keyframes ripple {
            to {
                transform: scale(4);
                opacity: 0;
            }
        }
        
        /* Enhanced hover states */
        .benefit-card, .category-card, .store-card, .process-card, .testimonial-card {
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        .benefit-card:hover, .category-card:hover, .store-card:hover, .process-card:hover, .testimonial-card:hover {
            transform: translateY(-5px);
        }
    </style>
