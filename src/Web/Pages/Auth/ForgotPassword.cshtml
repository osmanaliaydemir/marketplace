@page "/sifremi-unuttum"
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
    var emailErrors = ModelState.ContainsKey("Email") ? ModelState["Email"].Errors : null;
    var hasEmailErrors = emailErrors != null && emailErrors.Count > 0;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4><i class="fas fa-key me-2"></i>Şifremi Unuttum</h4>
                </div>
                <div class="card-body">
                    @if (Model.IsSuccess)
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @Model.Message
                        </div>
                        <div class="text-center">
                            <a href="/login" class="btn btn-primary">
                                <i class="fas fa-sign-in-alt me-2"></i>Giriş Sayfasına Dön
                            </a>
                        </div>
                    }
                    else
                    {
                        <form method="post">
                            @Html.AntiForgeryToken()
                            
                            <div class="mb-3">
                                <label for="email" class="form-label">E-posta Adresi</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                    <input type="email" class="form-control @(hasEmailErrors ? "is-invalid" : "")" 
                                           id="email" name="Email" value="@Model.Email" 
                                           placeholder="ornek@email.com" required>
                                </div>
                                @if (hasEmailErrors)
                                {
                                    <div class="invalid-feedback d-block">
                                        @emailErrors.First().ErrorMessage
                                    </div>
                                }
                            </div>

                            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                            {
                                <div class="alert alert-danger" role="alert">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    @Model.ErrorMessage
                                </div>
                            }

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-paper-plane me-2"></i>Şifre Sıfırlama Bağlantısı Gönder
                                </button>
                            </div>
                        </form>

                        <hr class="my-4">

                        <div class="text-center">
                            <a href="/giris" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-arrow-left me-2"></i>Giriş Sayfasına Dön
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/auth/forgotPassword.js"></script>
}
