@page "/sifremi-sifirla"
@model ResetPasswordModel
@{
    ViewData["Title"] = "Şifre Sıfırlama";
    var newPasswordErrors = ModelState.ContainsKey("NewPassword") ? ModelState["NewPassword"].Errors : null;
    var confirmPasswordErrors = ModelState.ContainsKey("ConfirmPassword") ? ModelState["ConfirmPassword"].Errors : null;
    var hasNewPasswordErrors = newPasswordErrors != null && newPasswordErrors.Count > 0;
    var hasConfirmPasswordErrors = confirmPasswordErrors != null && confirmPasswordErrors.Count > 0;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <h4><i class="fas fa-lock me-2"></i>Şifre Sıfırlama</h4>
                </div>
                <div class="card-body">
                    @if (Model.IsSuccess)
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @Model.Message
                        </div>
                        <div class="text-center">
                            <a href="/login" class="btn btn-success">
                                <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                            </a>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @Model.ErrorMessage
                        </div>
                        <div class="text-center">
                            <a href="/forgot-password" class="btn btn-primary">
                                <i class="fas fa-key me-2"></i>Yeni Şifre Sıfırlama Bağlantısı İste
                            </a>
                        </div>
                    }
                    else
                    {
                        <form method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="Token" value="@Model.Token" />
                            
                            <div class="mb-3">
                                <label for="newPassword" class="form-label">Yeni Şifre</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                    <input type="password" class="form-control @(hasNewPasswordErrors ? "is-invalid" : "")" 
                                           id="newPassword" name="NewPassword" 
                                           placeholder="En az 8 karakter" required>
                                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                @if (hasNewPasswordErrors)
                                {
                                    <div class="invalid-feedback d-block">
                                        @newPasswordErrors.First().ErrorMessage
                                    </div>
                                }
                                <div class="form-text">
                                    Şifre en az 8 karakter olmalı ve en az bir küçük harf, bir büyük harf, bir rakam ve bir özel karakter içermelidir.
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">Şifre Tekrarı</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                    <input type="password" class="form-control @(hasConfirmPasswordErrors ? "is-invalid" : "")" 
                                           id="confirmPassword" name="ConfirmPassword" 
                                           placeholder="Şifrenizi tekrar giriniz" required>
                                    <button class="btn btn-outline-secondary" type="button" id="toggleConfirmPassword">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                @if (hasConfirmPasswordErrors)
                                {
                                    <div class="invalid-feedback d-block">
                                        @confirmPasswordErrors.First().ErrorMessage
                                    </div>
                                }
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save me-2"></i>Şifremi Değiştir
                                </button>
                            </div>
                        </form>

                        <hr class="my-4">

                        <div class="text-center">
                            <a href="/login" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-arrow-left me-2"></i>Giriş Sayfasına Dön
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/auth/resetPassword.js"></script>
}
