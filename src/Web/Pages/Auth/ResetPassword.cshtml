@page "/sifre-sifirla"
@model Web.Pages.Auth.ResetPasswordModel
@{
    ViewData["Title"] = "Şifre Sıfırla";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h1 class="h3 mb-4 text-center">Şifre Sıfırla</h1>
                    <p class="text-muted text-center mb-4">Yeni şifrenizi girin</p>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success">@Model.SuccessMessage</div>
                    }

                    @if (!Model.IsPasswordReset)
                    {
                        <form method="post">
                            @Html.AntiForgeryToken()
                            <input asp-for="Input.Token" type="hidden" />
                            
                            <div class="mb-3">
                                <label class="form-label">Yeni Şifre <span class="text-danger">*</span></label>
                                <input asp-for="Input.Password" type="password" class="form-control" />
                                <span class="text-danger" asp-validation-for="Input.Password"></span>
                                <div class="form-text">En az 8 karakter, büyük harf, küçük harf ve rakam içermelidir</div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Şifre Tekrar <span class="text-danger">*</span></label>
                                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
                                <span class="text-danger" asp-validation-for="Input.ConfirmPassword"></span>
                            </div>
                            
                            <button type="submit" class="btn btn-primary w-100 mb-3">
                                <i class="fas fa-key me-2"></i>Şifreyi Sıfırla
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="text-center">
                            <i class="fas fa-check-circle text-success fa-3x mb-3"></i>
                            <h5>Şifre Başarıyla Sıfırlandı!</h5>
                            <p class="text-muted">Şifreniz başarıyla güncellendi. Artık yeni şifrenizle giriş yapabilirsiniz.</p>
                            <a href="/giris" class="btn btn-primary">Giriş Yap</a>
                        </div>
                    }

                    <div class="text-center mt-4">
                        <p class="mb-0">Hesabınızı hatırladınız mı? <a href="/giris" class="text-decoration-none">Giriş Yapın</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}