@page "/uye-ol"
@model Web.Pages.CustomerRegisterModel
@{
    ViewData["Title"] = "Üye Ol";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h1 class="h3 mb-4 text-center">Üye Ol</h1>
                    <p class="text-muted text-center mb-4">Marketplace'e katılın ve alışverişe başlayın</p>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success">@Model.SuccessMessage</div>
                    }

                    <form method="post">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Ad <span class="text-danger">*</span></label>
                                <input asp-for="Input.FirstName" class="form-control" />
                                <span class="text-danger" asp-validation-for="Input.FirstName"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Soyad <span class="text-danger">*</span></label>
                                <input asp-for="Input.LastName" class="form-control" />
                                <span class="text-danger" asp-validation-for="Input.LastName"></span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">E-posta <span class="text-danger">*</span></label>
                            <input asp-for="Input.Email" type="email" class="form-control" />
                            <span class="text-danger" asp-validation-for="Input.Email"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Telefon <span class="text-danger">*</span></label>
                            <input asp-for="Input.Phone" type="tel" class="form-control" placeholder="0555 123 45 67" />
                            <span class="text-danger" asp-validation-for="Input.Phone"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Şifre <span class="text-danger">*</span></label>
                            <input asp-for="Input.Password" type="password" class="form-control" />
                            <span class="text-danger" asp-validation-for="Input.Password"></span>
                            <div class="form-text">En az 8 karakter, büyük harf, küçük harf ve rakam içermelidir</div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Şifre Tekrar <span class="text-danger">*</span></label>
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
                            <span class="text-danger" asp-validation-for="Input.ConfirmPassword"></span>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input asp-for="Input.AcceptTerms" type="checkbox" class="form-check-input" />
                            <label class="form-check-label">
                                <a href="/gizlilik" target="_blank">Gizlilik Politikası</a> ve 
                                <a href="/kullanim-kosullari" target="_blank">Kullanım Koşulları</a>'nı okudum ve kabul ediyorum <span class="text-danger">*</span>
                            </label>
                            <span class="text-danger" asp-validation-for="Input.AcceptTerms"></span>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input asp-for="Input.AcceptMarketing" type="checkbox" class="form-check-input" />
                            <label class="form-check-label">
                                Kampanya ve duyurular hakkında e-posta almak istiyorum
                            </label>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100 mb-3">
                            <i class="fas fa-user-plus me-2"></i>Üye Ol
                        </button>
                    </form>

                    <div class="text-center">
                        <p class="mb-0">Zaten hesabınız var mı? <a href="/giris" class="text-decoration-none">Giriş Yapın</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}