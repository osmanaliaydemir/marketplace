@page "/satici/urunler/yeni"
@model Web.Pages.Seller.Products.CreateModel
@{
    ViewData["Title"] = "Ürün Ekle";
}
<section class="container py-4">
    <h1 class="h4 mb-3">Ürün Ekle</h1>
    <form method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label class="form-label">Ürün Adı</label>
            <input asp-for="Input.Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Input.Name"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Kısa Açıklama</label>
            <textarea asp-for="Input.ShortDescription" class="form-control" rows="2" placeholder="Ürünün kısa tanımı"></textarea>
            <span class="text-danger" asp-validation-for="Input.ShortDescription"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Detaylı Açıklama</label>
            <textarea asp-for="Input.Description" class="form-control" rows="4" placeholder="Ürünün detaylı açıklaması"></textarea>
            <span class="text-danger" asp-validation-for="Input.Description"></span>
        </div>
        <div class="row">
            <div class="col-md-4 mb-3">
                <label class="form-label">Kategori</label>
                <select asp-for="Input.CategoryId" class="form-select">
                    <option value="">Kategori Seçiniz</option>
                    @foreach (var category in Model.Categories)
                    {
                        if (category.IsMainCategory)
                        {
                            <optgroup label="@category.Name">
                                @foreach (var subCategory in Model.Categories.Where(c => c.ParentId == category.Id))
                                {
                                    <option value="@subCategory.Id">&nbsp;&nbsp;└ @subCategory.Name</option>
                                }
                            </optgroup>
                        }
                    }
                </select>
                <span class="text-danger" asp-validation-for="Input.CategoryId"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Fiyat</label>
                <input asp-for="Input.Price" type="number" step="0.01" class="form-control" />
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Stok</label>
                <input asp-for="Input.StockQty" type="number" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 mb-3">
                <label class="form-label">SKU</label>
                <input asp-for="Input.Sku" class="form-control" placeholder="Ürün kodu" />
                <span class="text-danger" asp-validation-for="Input.Sku"></span>
            </div>
            <div class="col-md-3 mb-3">
                <label class="form-label">Para Birimi</label>
                <select asp-for="Input.Currency" class="form-select">
                    <option value="TRY">TRY</option>
                    <option value="USD">USD</option>
                    <option value="EUR">EUR</option>
                </select>
            </div>
            <div class="col-md-3 mb-3">
                <label class="form-label">Ağırlık (gram)</label>
                <input asp-for="Input.Weight" type="number" step="0.001" class="form-control" />
            </div>
            <div class="col-md-3 mb-3">
                <label class="form-label">Eski Fiyat</label>
                <input asp-for="Input.CompareAtPrice" type="number" step="0.01" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="form-check">
                    <input asp-for="Input.IsPublished" class="form-check-input" type="checkbox" />
                    <label class="form-check-label">Yayınla</label>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="form-check">
                    <input asp-for="Input.IsActive" class="form-check-input" type="checkbox" />
                    <label class="form-check-label">Aktif</label>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="form-check">
                    <input asp-for="Input.IsFeatured" class="form-check-input" type="checkbox" />
                    <label class="form-check-label">Öne Çıkan</label>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a href="/satici/urunler" class="btn btn-secondary ms-2">İptal</a>
    </form>
</section>
