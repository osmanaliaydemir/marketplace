@page "/giris"
@model Web.Pages.LoginModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h1 class="h3 mb-4 text-center">Giriş Yap</h1>
                    <p class="text-muted text-center mb-4">Hesabınıza giriş yapın</p>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }

                    <form method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">E-posta veya Kullanıcı Adı <span class="text-danger">*</span></label>
                            <input asp-for="Input.EmailOrUsername" class="form-control" placeholder="ornek@email.com" />
                            <span class="text-danger" asp-validation-for="Input.EmailOrUsername"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Şifre <span class="text-danger">*</span></label>
                            <input asp-for="Input.Password" type="password" class="form-control" placeholder="••••••••" />
                            <span class="text-danger" asp-validation-for="Input.Password"></span>
                        </div>
                        <div class="mb-3 form-check">
                            <input asp-for="Input.RememberMe" type="checkbox" class="form-check-input" />
                            <label class="form-check-label">
                                Beni hatırla
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mb-3">
                            <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                        </button>
                    </form>

                    <div class="text-center">
                        <p class="mb-2">
                            <a href="/sifremi-unuttum" class="text-decoration-none">
                                <i class="fas fa-key me-1"></i>Şifremi Unuttum
                            </a>
                        </p>
                        <p class="mb-0">Hesabınız yok mu? <a href="/uye-ol" class="text-decoration-none">Üye Olun</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
