@page
@model TestModel
@{
    ViewData["Title"] = "Test SayfasÄ±";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Test Form</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label for="testInput" class="form-label">Test Input</label>
                            <input type="text" class="form-control" id="testInput" name="TestInput" value="Test Data">
                        </div>
                        <button type="submit" class="btn btn-primary">Test Submit</button>
                    </form>
                    
                    @if (Model?.Message != null)
                    {
                        <div class="alert alert-info mt-3">
                            @Model.Message
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
