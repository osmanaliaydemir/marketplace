@page
@model Dashboard.Pages.Payments.IndexModel
@{
    ViewData["Title"] = "Ödemeler";
    Layout = "_Layout";
}

<!-- Page Header -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2 text-primary">
        <i class="bi bi-credit-card me-2"></i>
        Ödemeler
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-primary">
                <i class="bi bi-funnel me-1"></i>
                Filtrele
            </button>
            <button type="button" class="btn btn-sm btn-outline-success">
                <i class="bi bi-plus me-1"></i>
                Manuel Ödeme
            </button>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stats-card card h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Toplam Gelir
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">₺@Model.TotalRevenue.ToString("N0")</div>
                    </div>
                    <div class="col-auto">
                        <div class="stats-icon bg-gradient-success">
                            <i class="bi bi-currency-dollar"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stats-card card h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Başarılı Ödeme
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.SuccessfulPayments</div>
                    </div>
                    <div class="col-auto">
                        <div class="stats-icon bg-gradient-primary">
                            <i class="bi bi-check-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stats-card card h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Bekleyen Ödeme
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingPayments</div>
                    </div>
                    <div class="col-auto">
                        <div class="stats-icon bg-gradient-warning">
                            <i class="bi bi-clock-history"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stats-card card h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                            Başarısız Ödeme
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.FailedPayments</div>
                    </div>
                    <div class="col-auto">
                        <div class="stats-icon bg-gradient-danger">
                            <i class="bi bi-x-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Payments Table -->
<div class="row">
    <div class="col-12">
        <div class="card stats-card">
            <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                <h5 class="m-0 font-weight-bold text-primary">
                    <i class="bi bi-list-ul me-2"></i>
                    Son Ödemeler
                </h5>
                <div class="d-flex gap-2">
                    <select class="form-select form-select-sm" style="width: auto;">
                        <option>Tümü</option>
                        <option>Başarılı</option>
                        <option>Bekleyen</option>
                        <option>Başarısız</option>
                        <option>İade</option>
                    </select>
                    <select class="form-select form-select-sm" style="width: auto;">
                        <option>Tüm Yöntemler</option>
                        <option>Kredi Kartı</option>
                        <option>Banka Transferi</option>
                        <option>PayTR</option>
                    </select>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0">Ödeme ID</th>
                                <th class="border-0">Sipariş No</th>
                                <th class="border-0">Müşteri</th>
                                <th class="border-0">Tutar</th>
                                <th class="border-0">Yöntem</th>
                                <th class="border-0">Durum</th>
                                <th class="border-0">Tarih</th>
                                <th class="border-0">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in Model.Payments)
                            {
                                <tr>
                                    <td class="fw-bold text-primary">#@payment.PaymentId</td>
                                    <td>
                                        <a href="/Orders/@payment.OrderId" class="text-decoration-none">
                                            #@payment.OrderNumber
                                        </a>
                                    </td>
                                    <td>
                                        <div>
                                            <div class="fw-bold">@payment.CustomerName</div>
                                            <small class="text-muted">@payment.CustomerEmail</small>
                                        </div>
                                    </td>
                                    <td class="fw-bold">₺@payment.Amount.ToString("N2")</td>
                                    <td>
                                        <span class="badge bg-light text-dark">
                                            <i class="@payment.MethodIcon me-1"></i>
                                            @payment.PaymentMethod
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-@payment.StatusColor">@payment.Status</span>
                                    </td>
                                    <td>@payment.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary" title="Detay">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            @if (payment.Status == "Başarılı")
                                            {
                                                <button class="btn btn-outline-warning" title="İade">
                                                    <i class="bi bi-arrow-return-left"></i>
                                                </button>
                                            }
                                            <button class="btn btn-outline-secondary" title="Yazdır">
                                                <i class="bi bi-printer"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-white border-0">
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">Toplam @Model.TotalPayments ödeme</small>
                    <nav>
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item"><a class="page-link" href="#">Önceki</a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">Sonraki</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
