@page
@model Dashboard.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<!-- Welcome Section -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2 text-primary">
        <i class="bi bi-sun me-2"></i>
        Hoş Geldiniz, @Model.UserName!
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-primary">
                <i class="bi bi-download me-1"></i>
                Export
            </button>
            <button type="button" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-printer me-1"></i>
                Print
            </button>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card card h-100 py-3">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Toplam Satış
                        </div>
                        <div class="h4 mb-0 font-weight-bold text-gray-800">₺@Model.TotalSales.ToString("N0")</div>
                        <small class="text-success">
                            <i class="bi bi-arrow-up"></i> %12 artış
                        </small>
                    </div>
                    <div class="col-auto">
                        <div class="stats-icon bg-gradient-primary">
                            <i class="bi bi-currency-dollar"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card card h-100 py-3">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Toplam Sipariş
                        </div>
                        <div class="h4 mb-0 font-weight-bold text-gray-800">@Model.TotalOrders</div>
                        <small class="text-success">
                            <i class="bi bi-arrow-up"></i> %8 artış
                        </small>
                    </div>
                    <div class="col-auto">
                        <div class="stats-icon bg-gradient-success">
                            <i class="bi bi-cart-check"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card card h-100 py-3">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Bekleyen Başvuru
                        </div>
                        <div class="h4 mb-0 font-weight-bold text-gray-800">@Model.PendingApplications</div>
                        <small class="text-warning">
                            <i class="bi bi-exclamation-triangle"></i> İnceleme bekliyor
                        </small>
                    </div>
                    <div class="col-auto">
                        <div class="stats-icon bg-gradient-warning">
                            <i class="bi bi-clock-history"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card card h-100 py-3">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Aktif Mağaza
                        </div>
                        <div class="h4 mb-0 font-weight-bold text-gray-800">@Model.ActiveStores</div>
                        <small class="text-info">
                            <i class="bi bi-check-circle"></i> Aktif mağaza
                        </small>
                    </div>
                    <div class="col-auto">
                        <div class="stats-icon bg-gradient-info">
                            <i class="bi bi-shop"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts and Activities Row -->
<div class="row">
    <!-- Recent Activities -->
    <div class="col-lg-8 mb-4">
        <div class="card stats-card h-100">
            <div class="card-header bg-white border-0">
                <h5 class="m-0 font-weight-bold text-primary">
                    <i class="bi bi-activity me-2"></i>
                    Son Aktiviteler
                </h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    @foreach (var activity in Model.RecentActivities)
                    {
                        <div class="list-group-item border-0 px-0 py-3">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <div class="stats-icon bg-gradient-primary" style="width: 45px; height: 45px; font-size: 18px;">
                                        <i class="@activity.Icon"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-1 fw-bold">@activity.Title</h6>
                                    <p class="mb-1 text-muted">@activity.Description</p>
                                    <small class="text-muted">
                                        <i class="bi bi-clock me-1"></i>
                                        @activity.TimeAgo
                                    </small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="text-center mt-3">
                    <a href="#" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-eye me-1"></i>
                        Tüm Aktiviteleri Görüntüle
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-lg-4 mb-4">
        <div class="card stats-card h-100">
            <div class="card-header bg-white border-0">
                <h5 class="m-0 font-weight-bold text-primary">
                    <i class="bi bi-lightning me-2"></i>
                    Hızlı İşlemler
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-3">
                    <a href="/StoreApplications" class="btn btn-primary">
                        <i class="bi bi-file-earmark-text me-2"></i>
                        Başvuruları İncele
                    </a>
                    <a href="/Orders" class="btn btn-outline-primary">
                        <i class="bi bi-cart-plus me-2"></i>
                        Yeni Sipariş
                    </a>
                    <a href="/Products" class="btn btn-outline-primary">
                        <i class="bi bi-box me-2"></i>
                        Ürün Yönetimi
                    </a>
                    <a href="/Reports" class="btn btn-outline-primary">
                        <i class="bi bi-graph-up me-2"></i>
                        Satış Raporları
                    </a>
                    <a href="/Settings" class="btn btn-outline-secondary">
                        <i class="bi bi-gear me-2"></i>
                        Sistem Ayarları
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Additional Dashboard Row -->
<div class="row">
    <div class="col-12">
        <div class="card stats-card">
            <div class="card-header bg-white border-0">
                <h5 class="m-0 font-weight-bold text-primary">
                    <i class="bi bi-graph-up me-2"></i>
                    Satış Performansı
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="border-end">
                            <h4 class="text-success mb-1">+15%</h4>
                            <small class="text-muted">Bu Ay</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="border-end">
                            <h4 class="text-info mb-1">₺45K</h4>
                            <small class="text-muted">Haftalık Gelir</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="border-end">
                            <h4 class="text-warning mb-1">234</h4>
                            <small class="text-muted">Aktif Ürün</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <h4 class="text-primary mb-1">98.5%</h4>
                        <small class="text-muted">Müşteri Memnuniyeti</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
