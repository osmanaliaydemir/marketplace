@page
@model Dashboard.Pages.Orders.IndexModel
@{
    ViewData["Title"] = "Siparişler";
    Layout = "_Layout";
}

<!-- Page Header -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2 text-primary">
        <i class="bi bi-cart-check me-2"></i>
        Siparişler
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-primary">
                <i class="bi bi-funnel me-1"></i>
                Filtrele
            </button>
            <button type="button" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-download me-1"></i>
                Export
            </button>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stats-card card h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Toplam Sipariş
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalOrders</div>
                    </div>
                    <div class="col-auto">
                        <div class="stats-icon bg-gradient-primary">
                            <i class="bi bi-cart-check"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stats-card card h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Bekleyen
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingOrders</div>
                    </div>
                    <div class="col-auto">
                        <div class="stats-icon bg-gradient-warning">
                            <i class="bi bi-clock-history"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stats-card card h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Tamamlanan
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.CompletedOrders</div>
                    </div>
                    <div class="col-auto">
                        <div class="stats-icon bg-gradient-success">
                            <i class="bi bi-check-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stats-card card h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                            İptal Edilen
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.CancelledOrders</div>
                    </div>
                    <div class="col-auto">
                        <div class="stats-icon bg-gradient-danger">
                            <i class="bi bi-x-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Orders Table -->
<div class="row">
    <div class="col-12">
        <div class="card stats-card">
            <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                <h5 class="m-0 font-weight-bold text-primary">
                    <i class="bi bi-list-ul me-2"></i>
                    Son Siparişler
                </h5>
                <div class="d-flex gap-2">
                    <select class="form-select form-select-sm" style="width: auto;">
                        <option>Tümü</option>
                        <option>Bekleyen</option>
                        <option>İşleniyor</option>
                        <option>Tamamlanan</option>
                        <option>İptal</option>
                    </select>
                    <button class="btn btn-primary btn-sm">
                        <i class="bi bi-plus"></i>
                        Yeni Sipariş
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0">Sipariş No</th>
                                <th class="border-0">Müşteri</th>
                                <th class="border-0">Ürünler</th>
                                <th class="border-0">Toplam</th>
                                <th class="border-0">Durum</th>
                                <th class="border-0">Tarih</th>
                                <th class="border-0">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders)
                            {
                                <tr>
                                    <td class="fw-bold text-primary">#@order.OrderNumber</td>
                                    <td>
                                        <div>
                                            <div class="fw-bold">@order.CustomerName</div>
                                            <small class="text-muted">@order.CustomerEmail</small>
                                        </div>
                                    </td>
                                    <td>@order.ItemCount ürün</td>
                                    <td class="fw-bold">₺@order.Total.ToString("N2")</td>
                                    <td>
                                        <span class="badge bg-@order.StatusColor">@order.Status</span>
                                    </td>
                                    <td>@order.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="/Orders/@order.Id" class="btn btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <button class="btn btn-outline-secondary">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-white border-0">
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">Toplam @Model.TotalOrders sipariş</small>
                    <nav>
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item"><a class="page-link" href="#">Önceki</a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">Sonraki</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
